<div class="container">

    <div class="jumbotron">
        <div class="row">

            <div class="col-sm-3">

            </div>
            <div class="col-sm-6">
                <img src="/assets/img/burger.png" alt="Burger" style="width:400px;height:400px;">
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="lefthead"><strong>New Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="btn btn-primary" id="devour" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><i class="material-icons">
                                fastfood
                            </i></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="righthead"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button class="delete-burger btn btn-danger" id="delete" data-id="{{this.id}}"><i
                                class="material-icons">
                                delete </i></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="jumbotron">

        <div class="row">

            <div class="col-sm-3">
            </div>
            <div class="col-sm-6">
                <h2 id="color-override">Make a Burger</h2>
                <panel>
                    <form class="create-form">
                        <div class="form-group">
                            <input type="text" id="newburger" name="burger">
                            <button type="submit" class="btn btn-success" id="new_burger"><i class="material-icons">
                                    add
                                </i></button>
                        </div>
                    </form>
                </panel>
            </div>
        </div>
    </div>
</div>